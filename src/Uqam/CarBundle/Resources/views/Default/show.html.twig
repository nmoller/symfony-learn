{% extends '@base/base.html.twig' %}

{% block title %}{{ car.make.name }} - {{ car.model.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ car.make.name }}</h1>
        <h2> Model: {{ car.model.name }}</h2>
        {% if car.description %}
            <p>{{ car.description }}</p>
        {% else %}
            <p>No description available.</p>
        {% endif %}

        <a href="{{ url('offer') }}"> Back to offer</a>
    </div>
{% endblock %}